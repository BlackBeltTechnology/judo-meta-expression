context EXPR!NumericAttribute {
    constraint AttributeTypeIsNumeric {
        guard: self.satisfiesAll("AttributeTypeIsDefined") and self.entityExpression.satisfiesAll("EntityTypeIsDefined")
    
        check: self.getAttributeType().isNumeric()
        message: "Attribute type of " + self.attributeName + " of entity type " + self.entityExpression.getEntityType().getName() + " is not numeric"
    }
}
